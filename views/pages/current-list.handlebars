<div class="container-fluid">
    <div class="container mt-5">

<h2 class="section-heading--main">
<span id="current-list"></span>
</h2>

<hr>

<div id="current-list-container"></div>

<script id="current-list-template" type="text/x-handlebars-template">
<div class="row">
\{{#each book}}
<div class="col-lg-3 col-sm-6 d-inline">
    <div class="card mb-3">
        <img src=" \{{image}}" class="img-fluid card-img-top" style="max-height:25rem" alt="book">
            <div class="card-body">
                <h5 class="card-title"> \{{title}}</h5>
                <p class="card-text">By: \{{author}}</p>
                <a href="#" class="btn btn-primary current-book-link" data-title="\{{title}}" data-author="\{{author}}" data-rating="\{{rating}}" data-img="\{{image}}" id="\{{book_id}}">Learn More</a>
            </div>
    </div>
</div>
\{{/each}}
</script>

</div>
</div>




<script src="assets/js/current-list.js" type="text/javascript" ></script>
