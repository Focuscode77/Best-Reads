<div class="container-fluid">
    <div class="container mt-5">

        <div id="current-book"></div>

        <script id="current-book-template" type="text/x-handlebars-template">
    <h2 class="section-heading--main" id="current-book-title">
        \{{title}}
    </h2>
    <hr>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
                <img class="img-fluid" src="\{{image}}">
        </div>

        <div class="col-sm-12 col-md-5">
            <div class="current-book-info mb-5">
            <h3 class="info-heading"><b>Author:</b> \{{author}}</h3>
            <h3 class="info-heading"><b>Rating:</b> \{{rating}}</h3>
            <h3 class="info-heading"><b>ID #:</b> \{{id}}</h3>
            </div>

            <div class="current-book-lists">
                <h3 class="info-heading"><b>Your Lists</b></h3>
                <ul id="current-book-list">
                    <li class="list-group-item current-book-list--item"><a href="#">Favorites</a></li>
                    <li class="list-group-item current-book-list--item"><a href="#">Read</a></li>
                    <li class="list-group-item current-book-list--item"><a href="#">YA</a></li>
                    <li class="list-group-item current-book-list--item"><a href="#">Fantasy</a></li>
                </ul>
            </div>

             <div class="btn--add dropdown" id="{{id}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fas fa-plus-circle btn--add btn--add-not-listed hvr-grow hvr-back-pulse fa-4x"></i>
    </div>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
      <a class="dropdown-item add-to-list" id="current-reads" value="1" data-title="\{{title}}" data-author="\{{author}}" data-rating="\{{rating}}" data-img="\{{image}}" data-id="\{{id}}">Current Reads</a>
      <a class="dropdown-item add-to-list" id="past-reads" value="2" data-title="\{{title}}" data-author="\{{author}}" data-rating="\{{rating}}" data-img="\{{image}}" data-id="\{{id}}">Past Reads</a>
      <a class="dropdown-item add-to-list" id="future-reads" value="3" data-title="\{{title}}" data-author="\{{author}}" data-rating="\{{rating}}" data-img="\{{image}}" data-id="\{{id}}">Future Reads</a>
    </div>

        </div>
    </div>
    </script>

    </div>
</div>

<script src="assets/js/current-book.js" type="text/javascript"></script>